<div class="mt-4">
  <div class="row">
    
    {{# each courses}}
    <div class="col-sm-6 col-lg-4" style="padding-top: 75px;">
      <div class="card card-course-item" >
        <a href="/courses/{{this.slug}}" >
          <img class="card-img-top" src="{{this.img}}" alt="{{this.name}}" style="border-radius: 10px;" >
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
          <a href="/courses/{{this.slug}}" class="btn btn-primary" style="border-radius: 10px;">Xem ná»™i dung</a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>